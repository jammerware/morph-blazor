@using System.Reflection
@using MorphWasm
@using MorphShared.Components

@inject NavigationManager NavigationManager

@page "/"

<PageTitle>Morph</PageTitle>

<MorphTitle Version="AppVersion" />

<MorphSearchBox OnSearch="OnSearch" />

    @code {
        private string? AppVersion { get; set; }
    private string? Query { get; set; }

    protected override void OnInitialized()
    {
        this.AppVersion = typeof(Index).Assembly.GetName().Version?.ToString();
    }

    private void OnSearch(string query)
    {
        this.Query = query;
        this.NavigationManager.NavigateTo($"/word/{query}");
    }
}